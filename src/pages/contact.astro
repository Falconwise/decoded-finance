---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact"
  description="Get in touch for advisory inquiries, consulting, or collaboration. Reach Abdul Gaffar Mohammed, CFA at decoded.finance."
>
  <section class="section bg-alabaster">
    <div class="container">
      <div class="max-w-2xl mx-auto">
        <p class="label text-copper mb-2">Get In Touch</p>
        <h1 class="mb-3">Contact</h1>
        <p class="text-gray-600 mb-8">
          Inquiries about advisory services, consulting, or collaboration. I typically respond within 24-48 hours.
        </p>

        <!-- Contact Form (Formspree) -->
        <form
          action="https://formspree.io/f/YOUR_FORM_ID"
          method="POST"
          class="card p-6 md:p-8"
        >
          <div class="grid md:grid-cols-2 gap-4 mb-4">
            <div>
              <label for="name" class="block text-sm font-bold text-graphite mb-1">Name *</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-200 rounded text-sm focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent"
                placeholder="Your full name"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-bold text-graphite mb-1">Email *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-200 rounded text-sm focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent"
                placeholder="your@email.com"
              />
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-4 mb-4">
            <div>
              <label for="company" class="block text-sm font-bold text-graphite mb-1">Company</label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 border border-gray-200 rounded text-sm focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent"
                placeholder="Your company"
              />
            </div>
            <div>
              <label for="subject" class="block text-sm font-bold text-graphite mb-1">Subject</label>
              <input
                type="text"
                id="subject"
                name="_subject"
                class="w-full px-4 py-3 border border-gray-200 rounded text-sm focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent"
                placeholder="How can I help?"
              />
            </div>
          </div>

          <div class="mb-4">
            <label for="message" class="block text-sm font-bold text-graphite mb-1">Message *</label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-4 py-3 border border-gray-200 rounded text-sm focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent resize-y"
              placeholder="Tell me about your inquiry..."
            ></textarea>
          </div>

          <div class="mb-6">
            <label class="flex items-start gap-3 cursor-pointer">
              <input
                type="checkbox"
                name="interested_in_ipo_valuation"
                value="yes"
                class="mt-1 w-4 h-4 accent-sage"
              />
              <span class="text-sm text-gray-600">
                I'm interested in IPO Valuation Services
              </span>
            </label>
          </div>

          <!-- Honeypot for spam -->
          <input type="text" name="_gotcha" style="display:none" />

          <button type="submit" class="btn-primary w-full justify-center">
            Send Message
          </button>
        </form>

        <!-- Alternative Contact -->
        <div class="mt-8 text-center">
          <p class="text-sm text-gray-500 mb-4">Or reach me directly:</p>
          <div class="flex justify-center gap-6 text-sm">
            <a href="mailto:contact@decoded.finance" class="text-copper font-bold no-underline hover:underline">
              contact@decoded.finance
            </a>
            <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="text-copper font-bold no-underline hover:underline">
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
