---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/home/Hero.astro';
import FeaturedCaseStudy from '../components/home/FeaturedCaseStudy.astro';
import IPOPreview from '../components/home/IPOPreview.astro';
---

<BaseLayout title="Home">
  <Hero />
  <FeaturedCaseStudy />
  <IPOPreview />

  <!-- About Preview -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <p class="label text-copper page-kicker">About the Author</p>
        <h2 class="page-title">Abdul Gaffar Mohammed, CFA</h2>
        <p class="text-gray-600 mb-3 leading-relaxed">
          Corporate Treasury Professional managing SAR 1bn+ banking facilities, with experience executing SAR 2bn project financing deals. Deep expertise in equity research, valuation, and corporate finance.
        </p>
        <p class="text-gray-600 mb-6 leading-relaxed">
          Building decoded.finance to provide independent, rigorous analysis of Saudi capital markets — making institutional-quality research accessible to serious investors and finance professionals.
        </p>
        <a href="/about" class="btn-secondary text-sm py-2 px-6">Learn More</a>
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="section bg-sage">
    <div class="container">
      <div class="max-w-xl mx-auto text-center text-white">
        <h2 class="text-white mb-3">Get IPO Analysis Delivered</h2>
        <p class="text-sage-100 mb-6 opacity-90">
          Join finance professionals receiving our weekly Saudi IPO insights and market analysis.
        </p>
        <form
          action="https://formspree.io/f/xbdaavoa"
          method="POST"
          class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto"
        >
          <input type="hidden" name="_subject" value="New subscriber — decoded.finance" />
          <input type="hidden" name="_next" value="https://decoded.finance/?subscribed=true" />
          <input
            type="email"
            name="email"
            placeholder="your@email.com"
            required
            class="flex-1 px-4 py-3 rounded text-graphite text-sm border-0 focus:outline-none focus:ring-2 focus:ring-copper"
          />
          <button type="submit" class="px-6 py-3 bg-copper text-white rounded font-bold text-sm hover:bg-copper-600 transition-colors">
            Subscribe
          </button>
        </form>
        <p class="text-xs mt-3 opacity-80">By submitting this form, you agree to receive occasional educational updates from decoded.finance. You can unsubscribe at any time.</p>
      </div>
    </div>
  </section>
</BaseLayout>
