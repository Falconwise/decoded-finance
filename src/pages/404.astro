---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Not Found" description="Page not found.">
  <section class="section bg-alabaster">
    <div class="container text-center max-w-2xl mx-auto">
      <p class="label text-copper mb-2">404</p>
      <h1 class="mb-4">Page not found</h1>
      <p class="text-gray-600 mb-6">The page you requested does not exist.</p>
      <a href="/" class="btn-primary">Back to home</a>
    </div>
  </section>
</BaseLayout>
