---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/ipo-tracker', label: 'IPO Tracker' },
  { href: '/case-studies', label: 'Case Studies' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
];
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <nav class="container flex items-center justify-between py-4" aria-label="Main navigation">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 no-underline">
      <span class="font-heading text-2xl font-bold text-graphite tracking-tight">decoded<span class="text-sage">.</span>finance</span>
    </a>

    <!-- Desktop Navigation -->
    <ul class="hidden md:flex items-center gap-8 list-none m-0 p-0">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              'font-body font-bold text-sm no-underline transition-colors',
              currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
                ? 'text-sage'
                : 'text-graphite hover:text-sage',
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- CTA + Mobile Toggle -->
    <div class="flex items-center gap-4">
      <a href="/contact" class="hidden sm:inline-flex btn-primary text-sm py-2 px-4">Contact</a>
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-graphite"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100">
    <ul class="list-none m-0 p-0 py-4 px-6 flex flex-col gap-4">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              'block font-body font-bold text-base no-underline py-2',
              currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
                ? 'text-sage'
                : 'text-graphite',
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <a href="/contact" class="btn-primary text-sm py-2 px-4 inline-block mt-2">Contact</a>
      </li>
    </ul>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  btn?.addEventListener('click', () => {
    const expanded = btn.getAttribute('aria-expanded') === 'true';
    btn.setAttribute('aria-expanded', String(!expanded));
    menu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>
